{
  "name": "template-ts-express",
  "version": "1.0.0",
  "description": "template node express & typescript",
  "main": "app.js",
  "author": "Thomas Pearson",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && node -r dotenv/config dist/app.js",
    "build": "tsc",
    "restart": "rimraf dist && yarn start",
    "dev": "nodemon --ignore client --exec yarn restart",
    "prod": "rimraf dist && yarn build && node dist/app.js",
    "test": "jest",
    "test:watch": "jest --coverage --watchAll"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jwt-simple": "^0.5.6",
    "mongoose": "^5.9.18",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "^0.0.31",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^14.0.5",
    "@types/passport": "^1.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.9",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.3"
  }
}
